// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("POSTGRES_POSTGRES_URL")
}

model Furniture {
  id          Int                   @id @default(autoincrement())
  image       String                @unique
  name        String
  discription String
  price       Int
  category    String
  tags        Tag[]                 @relation("FurnitureTags")
  reviews     Review[]
  variations  FurnitureVariations[]
}

model User {
  id       Int    @id @default(autoincrement())
  initials String
  email    String @unique
  password String
  role     String @default("user")
}

model Review {
  id          Int       @id @default(autoincrement())
  content     String
  rating      Int
  furnitureId Int
  furniture   Furniture @relation(fields: [furnitureId], references: [id])
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  furnitures Furniture[] @relation("FurnitureTags")
}

model Colors {
  id                  Int                   @id @default(autoincrement())
  name                String
  code                String
  FurnitureVariations FurnitureVariations[]
}

model FurnitureVariations {
  id          Int        @id @default(autoincrement())
  furnitureId Int?
  sizeId      Int
  color       Colors     @relation(fields: [colorsId], references: [id])
  colorsId    Int
  size        Sizes      @relation(fields: [sizeId], references: [id])
  Furniture   Furniture? @relation(fields: [furnitureId], references: [id])
  images      Images[]
}

model Images {
  id                   Int                  @id @default(autoincrement())
  name                 String
  url                  String?
  FurnitureVariation   FurnitureVariations? @relation(fields: [furnitureVariationId], references: [id])
  furnitureVariationId Int?
}

model Sizes {
  id                  Int                   @id @default(autoincrement())
  size                String                @unique
  FurnitureVariations FurnitureVariations[]
}
